<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd
    http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">
	
	<changeSet id="5" author="ashtech">
		<preConditions onFail="MARK_RAN">
			<not>
				<tableExists tableName="booklog_roles"/>
			</not>
		</preConditions>
		<createTable tableName="trek_roles">
            <column name="TREK_ROLES_ID" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>		
	         <column name="USER_ID" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="AUTHORITY" type="varchar(50)">
             	<constraints nullable="false"/>
            </column>
		</createTable>
	</changeSet>
	<changeSet id="6" author="ashtech">
	    <addForeignKeyConstraint  baseColumnNames="USER_ID"   
            baseTableName="trek_roles"  
            baseTableSchemaName="trek"  
            constraintName="FK_USER_ID"    
            onDelete="CASCADE"  
            onUpdate="CASCADE"  
            referencedColumnNames="TREK_USER_ID"  
            referencedTableName="trek_user"  
            referencedTableSchemaName="trek" />
	</changeSet>

</databaseChangeLog>